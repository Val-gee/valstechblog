<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Add a new blog:</h3>
        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-name">Blog name:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group">
                <label for="blog-description">Blog Description:</label>
                <textarea class="form-input" id="blog-text" name="blog-text"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        {{#each blogs as |blog|}}
        <h2>{{blog.name}}</h2>
        <p>{{blog.description}}</p>
        <button class="deleteBtn" data-deletePost-id="{{blog.id}}">Delete</button>
        <hr>
        {{/each}}
    </div>
</div>

<script src="/js/dashboard.js"